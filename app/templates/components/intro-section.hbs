<div class="image" style="{{imageStyle}}"></div>
<div class="info">
  {{#if fullName}}
    <h1>{{fullName}}</h1>
  {{/if}}
  {{#if profession}}
    <div class="profession">{{profession}}</div>
  {{/if}}
  {{#if homeLocation}}
    <div class="location">{{homeLocation}}</div>
  {{/if}}
  {{#if hasLastObjects}}
    <ul>
      {{#if lastGeolocation}}
        <li class="geolocation">Currently in <span>{{lastGeolocation.neighborhood}}</span></li>
      {{/if}}
      {{#if lastWeatherExperience}}
        <li class="weather">Experiencing <span>{{lastWeatherExperience.description}}</span></li>
      {{/if}}
      {{#if lastCheckin}}
        <li class="last-checkin">Checked in {{format-relative lastCheckin.createdAt}} at <span>{{lastCheckin.name}}</span></li>
      {{/if}}
      {{#if lastUpdate.description}}
        <li class="last-published">Last published
        <span>
          {{#if lastUpdate.post}}
            {{#link-to 'post' lastUpdate.post.id}}{{lastUpdate.description}}{{/link-to}}
          {{else}}
            {{lastUpdate.description}}
          {{/if}}
        </span></li>
      {{/if}}
    </ul>
  {{/if}}
</div>
