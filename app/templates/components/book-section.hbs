{{#if book.coverImageUrl}}
  <div class="cover">
    <img src="{{book.coverImageUrl}}" />
  </div>
{{/if}}

<div class="content">
  {{#if book.isNew}}
    <div class="new">New</div>
  {{/if}}

  <h2>{{book.title}}</h2>

  {{#if book.subtitle}}
    <div class="subtitle">{{book.subtitle}}</div>
  {{/if}}

  {{book-release-div book=book}}

  {{#if book.purchaseUrl}}
    <a href="{{book.purchaseUrl}}" class="button purchase">{{purchaseButtonLabel}}</a>
  {{/if}}

  {{#if book.publisherUrl}}
    <a href="{{book.publisherUrl}}" class="button">Visit publisher</a>
  {{/if}}

  {{#if book.announcement}}
    <div class="announcement">{{book.announcement}}</div>
  {{/if}}

  {{#if book.description}}
    <div class="description">{{compiled-markdown markdown=book.description}}</div>
  {{/if}}

</div>