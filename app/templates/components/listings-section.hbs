{{#if header}}
  <h2>{{header}}</h2>
{{/if}}

{{#if sortedListings}}
  <div>
    <div>
      <ul>
        {{#each sortedListings as |listing|}}
          {{listing-li format=format linkListings=linkListings listing=listing modelName=modelName}}
        {{/each}}
      </ul>
    </div>
  </div>
{{else}}
  <div class="no-listings">No {{pluralModelName}}</div>
{{/if}}

{{#if limit}}
  {{#link-to pluralModelName class="view-all"}}View all {{pluralModelName}}{{/link-to}}
{{/if}}
