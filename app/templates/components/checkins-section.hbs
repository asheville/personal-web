{{#if standalone}}
  <h1>Check-ins</h1>
{{else}}
  <h2>Check-ins</h2>
{{/if}}

<div class="checkins">
  {{#if sortedCheckins.length}}
    {{#each sortedCheckins as |checkin|}}
      <div class="checkin">
        <div class="placeName">
          {{#if checkin.placeUrl}}
            <a href="{{checkin.placeUrl}}">{{checkin.placeName}}</a>
          {{else}}
            {{checkin.placeName}}
          {{/if}}
        </div>
        <div class="createdAt">{{format-date checkin.createdAt day="numeric" month="long" year="numeric" hour="numeric"}}</div>
        <div class="placeCity">{{checkin.placeCity}}</div>
      </div>
    {{/each}}
  {{else}}
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
    <div class="placeholder"></div>
  {{/if}}
</div>

{{#if sortedCheckins.length}}
  {{#if viewAll}}
    {{#link-to "checkins"}}View all check-ins{{/link-to}}
  {{/if}}
{{/if}}